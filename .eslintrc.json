{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/no-children-prop": "off",
        "multiline-ternary": "off",
        "indent": "off",
        "react/react-in-jsx-scope": "off",
        "new-cap": "off"
    }
}
